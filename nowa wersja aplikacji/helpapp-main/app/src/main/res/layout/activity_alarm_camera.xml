<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alarmCamera">


    // tworzenie i ustawienie przycisk Play Video

    <Button
        android:id="@+id/buttonDalej"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:foreground="@drawable/dalej"
        android:text="Dalej"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="115dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="167dp"
        android:layout_marginRight="167dp"
        android:layout_marginBottom="651dp"
        android:text="Nagrywanie" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="467dp"
        android:text="Nagraj krótki film z miejsca zdarzenia.\n\nPrzedstaw ratownikom, jak wygląda sytuacja" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/buttonDalej"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="86dp"
        android:foreground="@drawable/kamerka"
        android:onClick="CaptureVideo"
        android:text="Rozpocznij nagrywanie"
        app:backgroundTint="#00FFFFFF" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="174dp"
        android:text="Kliknij, by rozpocząć nagrywanie" />

</RelativeLayout>